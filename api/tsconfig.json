{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es6"],
    "module": "ES6",
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "declaration": true,
    "emitDeclarationOnly": true
  },
  "ts-node": {
    // Tell ts-node CLI to install the --loader automatically
    "esm": true
  }
}
