{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es6"],
    "module": "System",
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "build",
    "outFile": "./build/index.js",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "ts-node": {
    // Tell ts-node CLI to install the --loader automatically
    "esm": true
  },
  "include": ["src", "build/index.js"]
}
